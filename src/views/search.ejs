<%- include('./partials/head', {title: 'Busqueda' }) %>
<body>
	<div id="contenedor">
		<%- include('./partials/header') %>
		<main class="body__main">
            <div class="container products-wrapper">
                <div class="row">
                    <div class="col-12">
                        <h2 class="products-title">Resultados de la búsqueda: <%= keywords %></h2>
                    </div>
                    <% if (products.length > 0) { %>
                     <%products.forEach(({id,nombre,pricio,imagenes,description}) => { %>
                        <div class="col-12 col-sm-6 col-lg-3">
                           <section class="product-box">
                               <a href="/productos/detalles/<%=id%>">
                                   <figure class="product-box_image">
                                    <img src="/stock-photos/ %>" alt="imagen de producto">
                                   </figure>
                                   <article class="product-box_data">
                                       <h2>$<%= toThousand(precio) %></h2>
                                      
                                       <p><%= nombre %></p>
                                       <i class="fas fa-truck"></i>
                                   </article>
                               </a>
                           </section>
                       </div>
                       <% }) %>
                    <% }else{ %>
                    <div class="col-12">
                        <h2 class="products-title" style="color: tomato;">No hay productos que coincidan con esa búsqueda</h2>
                    </div>
                    <% } %>
                </div>
            </div>
		</main>
		<%- include('./partials/footer') %>
		
	</div>
</body>
</html>
