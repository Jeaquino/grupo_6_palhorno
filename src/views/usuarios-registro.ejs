<%- include('partials/head', {title: 'Formulario de creación' }) %>
	<body>
		<div id="contenedor">
			<%- include('./partials/header') %>
				<main class="body__main">
					<h1>Registro</h1>
					<form action="/usuarios/registro" method="POST" class="formularios">
						<div class="form__box__imagen">
						<img class="img" src="/stock-photos/mini-torta-red-velvet-2.jpg" alt="">
						</div>
						<div class="form__box__formulario">
						<div class="control-formularios">
							<input type="text" name="cliente" placeholder="Nombre" minlength="3"
								class="controls <%= locals.errors && errors.cliente ? 'is-invalid' : null %>"
								value="<%= locals.old && old.cliente ? old.cliente : null %>" name="cliente"
								>
							<small id="errorNombre" class="text-danger">
								<%= locals.errors && errors.cliente ? errors.cliente.msg : null %>
							</small>
						</div>
						<div class="control-formularios">
							<input type="text" name="apellido" placeholder="Apellido" minlength="3"
								class="controls <%= locals.errors && errors.apellido ? 'is-invalid' : null %>"
								value="<%= locals.old && old.apellido ? old.apellido : null %>">
							<small id="errorNombre" class="text-danger">
								<%= locals.errors && errors.apellido? errors.apellido.msg : null %>
							</small>
						</div>
						<div class="control-formularios">
							<input type="text" name="phone" placeholder="Número de teléfono"
								class="controls <%= locals.errors && errors.phone ? 'is-invalid' : null %>"
								value="<%= locals.old && old.phone ? old.phone : null %>">
							<small id="errorNombre" class="text-danger">
								<%= locals.errors && errors.phone? errors.phone.msg : null %>
							</small>
						</div>
						<div class="control-formularios">
							<input type="email" name="email" placeholder="E-mail"
								class="controls <%= locals.errors && errors.email? 'is-invalid' : null %>"
								value="<%= locals.old && old.email? old.email : null %>">
							<small id="errorNombre" class="text-danger">
								<%= locals.errors && errors.email? errors.email.msg : null %>
							</small>
						</div>
						<div class="control-formularios">
							<input type="password" name="contraseña" placeholder="Contraseña"
								class="controls <%= locals.errors && errors.contraseña ? 'is-invalid' : null %>"
								value="<%= locals.old && old.contraseña ? old.contraseña : null %>">
							<small id="errorNombre" class="text-danger">
								<%= locals.errors && errors.contraseña? errors.contraseña.msg : null %>
							</small>
						</div>
					<div class="control-formularios">
							<input type="password" name="contraseña2" placeholder="Repetir contraseña"
								class="controls <%= locals.errors && errors.contraseña2? 'is-invalid' : null %>"
								value="<%= locals.old && old.contraseña2 ? old.contraseña2: null %>">
							<small id="errorNombre" class="text-danger">
								<%= locals.errors && errors.contraseña2? errors.contraseña2.msg : null %>
							</small>
						</div>
						<div class="form__box">
							<input class="form__checkbox" type="checkbox" id="terminos" name="terms">
							<label class="form__label--small" for="terminos">Acepto los términos y condiciones</label>
							<small class="text-danger"><%= locals.errors && errors.terms ? errors.terms.msg :null %></small>
						</div>
						<button type="submit" class="boton-formularios">Registrarse</a></button>
						<div class="registros">
							<p>Ya estás registrado?</p>&nbsp;<a href="/usuarios/login" title="ingresa con tu usuario" style="font-weight: bold;">Inicia sesión</a>
						</div>
					</div>
					</form>
				</main>
				<%- include('./partials/footer') %>
		</div>
	</body>

	</html>